import numpy as np
import matplotlib.pyplot as plt

#Constants
A=1.4
B=2.0
C=0.8
f1=400
f2=600
tid=1.0
N=4096
dt=tid/float(N)

#Arrays
t=np.zeros(N+1)
f1=np.zeros(N+1)
f2=np.zeros(N+1)
f3=np.zeros(N+1)

t[0]=0.0
f1[0]=6
f2[0]=3
f3[0]=0

#Loop
for i in range(N):
    omega1=2*np.pi*f1
    omega2=2*np.pi*f2
    f1[i+1]=A*np.sin(omega1*t[i])
    f2[i+1]=B*np.cos(omega2*t[i])+3
    f3[i+1]=A*np.sin(omega1*t[i])+B*np.cos(omega2*t[i])
    t[i+1]=t[i]+dt

#Plot
plt.plot(t,f1)
plt.plot(t,f2)
plt.plot(t,f3)
plt.xlabel('Tid')
plt.ylabel('Amplitude')
plt.show()
